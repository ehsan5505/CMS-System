<!DOCTYPE html>
<html>
<head>
  <title> Simple CMS | <%= @page_title ||= "" %></title>
  <%= stylesheet_link_tag('public',:media=>'all') %> 
  <%= javascript_include_tag('application') %>
</head>
<body>
  <div class="container">

      <header class="row page-header">
	  <h1>Welcome to Management <small>Content Management System</small></h1>
      </header>
      	<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      		<%= render :partial=>"public/nav",:locals=>{:admin=>@admin,:status=>@status} %>
		</nav>




		<section class="row">
			<aside class="col-sm-4">
				<%= render :partial=>"public/navigation",:locals=>{:pages=>@pages} %>
			</aside>
			<article class="col-sm-7">
		    	<%= yield %>
		    </article>
		</section>
	
      <footer class="row">
			<p>ESI Corporation &trade;. <em> &copy; All Right Reserved <%= Time.now.strftime("%Y") %></em></p>
      </footer>
    
     </div><!-- end container -->
</body>
</html>
