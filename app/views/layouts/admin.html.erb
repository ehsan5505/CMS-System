<!DOCTYPE html>
<html>
<head>
  <title> Simple CMS | <%= @page_title ||= "Admin" %></title>
  <%= stylesheet_link_tag('application',:media=>'all') %> 
  <%= javascript_include_tag('application') %>
</head>
<body>
  <div class="container">

      <header class="row page-header">
	  <h1>Welcome to CMS <small>Content Management System</small></h1>
      </header>
	  <div class="row">
	      <% if !flash[:notice].blank? %>
		<p class="bg-primary"><strong>MSG:</strong><%= flash[:notice] %></p>
	      <% end %>
	  </div>
	
	<section class="row"> 
	    <%= yield %>
	</section>
	
      <footer class="row">
	<p>ESI Corporation &trade;. <em> &copy; All Right Reserved <%= Time.now.strftime("%Y") %></em></p>
      </footer>
    
     </div><!-- end container -->
</body>
</html>
