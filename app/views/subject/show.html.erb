<% @page_title = "Showoff #{@subject.name}" %>

  <%= link_to("<< Back to Index",{:action=>'index'},:class=>"btn btn-default btn-xs pull-right") %>
    <h2> Showing >> <%= @subject.name %> </h2>
	<%= form_for(:subject,:class=>"form-horizontal", :role=>"form") do |f| %>
	    <table>
	      <tr class="form-group">
		<th><%= f.label("Name:",:class=>"control-label col-sm-2",:for=>:name )%></th>
		<td class="col-sm-10"><p class="form-control-static"><%= @subject.name %></p></td>
	      </tr>
	      <tr class="form-group">
		<th><%= f.label("Position:",:class=>"control-label col-sm-2",:for=>:position )%></th>
		<td class="col-sm-10"><p class="form-control-static"><%= @subject.position %></p></td>
	      </tr>
	      <tr class="form-group">
		<th><%= f.label("Visible:",:class=>"control-label col-sm-2",:for=>:visible )%></th>
		<td class="col-sm-10"><p class="form-control-static"><%= @subject.visible %></p></td>
	      </tr>
	      <tr class="form-group">
		<th><%= f.label("Create:",:class=>"control-label col-sm-2",:for=>:created_at )%></th>
		<td class="col-sm-10"><p class="form-control-static"><%= @subject.created_at %></p></td>
	      </tr>
	      <tr class="form-group">
		<th><%= f.label("Update:",:class=>"control-label col-sm-2",:for=>:updated_at )%></th>
		<td class="col-sm-10"><p class="form-control-static"><%= @subject.updated_at %></p></td>
	      </tr>
	  </table>
	<% end %>
    
