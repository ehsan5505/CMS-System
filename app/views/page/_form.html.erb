<%= error_messages_for(@page) %>	
	<table>
	    <tr class="form-group">
	      <th><%= f.label(:subject_id,:for=>:subject_id,:class=>"col-sm-2 control-label") %></th>
	      <td class="col-sm-10"><%= f.select(:subject_id,@subjects.map { |s| [s.name,s.id]},
	      options={:selected=>@subject.id},html_option={:class=>"form-control"} ) %></td>
	    </tr>
	    <tr class="form-group">
	      <th><%= f.label("Name",:for=>:name,:class=>"col-sm-2 control-label") %></th>
	      <td class="col-sm-10"><%= f.text_field(:name,:class=>"form-control") %></td>
	    </tr>
	    <tr class="form-group">
	      <th><%= f.label("Position",:for=>:position,:class=>"control-label col-sm-2") %></th>
	      <td class="col-sm-10"><%= f.select(:position,1..@page_count,
	      options={:selected=>@page.position},html_option={:class=>"form-control"}) %></td>
	    </tr>
	    <tr class="form-group">
	    <div class="checkbox">
	      <th><%= f.label("Visible",:for=>:visible,:class=>"control-label col-sm-2") %></th>
	      <td class="col-sm-10"><%= f.check_box(:visible) %></td>
	    </div>
	    </tr>
	    <tr>
	    <div class="form-group">
	      <th><%= f.label("Permalink",:for=>:permalink,:class=>"control-label col-sm-2") %></th>
	      <td class="col-sm-10"><%= f.text_field(:permalink,:class=>"form-control") %></td>
	    </div>
	    </tr>
	</table>
	    