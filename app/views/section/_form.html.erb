  <%= error_messages_for(@section) %>
  
  <table>
	    <tr class="form-group">
	      <th><%= f.label(:page_id,:for=>:name,:class=>"col-sm-4 control-label") %></th>
	      <td class="col-sm-6"><%= f.select(:page_id,@pages.map { |pg| [pg.name,pg.id] },
	      options={:selected=>@page.id},html_option={:class=>"form-control"}) %></td>
	    </tr>
	    <tr class="form-group">
	      <th><%= f.label("Name",:for=>:name,:class=>"col-sm-2 control-label") %></th>
	      <td class="col-sm-10"><%= f.text_field(:name,:class=>"form-control") %></td>
	    </tr>
	    <tr class="form-group">
	      <th><%= f.label("Position",:for=>:position,:class=>"control-label col-sm-2") %></th>
	      <td class="col-sm-10"><%= f.select(:position,1..@section_count,
	      options={:selected=>@section.position},html_option={:class=>"form-control"}) %></td>
	    </tr>
	    <tr class="form-group">
	    <div class="checkbox">
	      <th><%= f.label("Visible",:for=>:visible,:class=>"control-label col-sm-2") %></th>
	      <td class="col-sm-10"><%= f.check_box(:visible) %></td>
	    </div>
	    </tr>
	    <tr class="form-group">
	      <th><%= f.label("Permalink",:for=>:permalink,:class=>"col-sm-2 control-label") %></th>
	      <td class="col-sm-10"><%= f.text_field(:permalink,:class=>"form-control") %></td>
	    </tr>

	    <tr>
	    <div class="form-group">
	      <th><%= f.label("Type",:for=>:content_type,:class=>"control-label col-sm-2") %></th>
	      <td class="col-sm-10">
		    <%= f.radio_button(:content_type,"txt") %>Text
		    <%= f.radio_button(:content_type,"html") %>HTML
	      </td>
	    </div>
	    </tr>
	    <div class="form-group">
	      <th><%= f.label("Content",:for=>:content,:class=>"control-label col-sm-2") %></th>
	      <td class="col-sm-10"><%= f.text_area(:content,:class=>"form-control",:size=>"90x5") %></td>
	    </div>
	    </tr>
	</table>